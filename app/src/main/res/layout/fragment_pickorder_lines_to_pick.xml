<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragmentPickorderLinesToPick"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Pick.PickorderLinesToPickFragment"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        style="@style/defaultSwipeToRefreshLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPickorderLinesTopick"
        style="@style/defaultRecyclerView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/currentBINContainer"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/pillButton"
        android:id="@+id/currentBINContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/textViewImAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/im_at"
            android:textSize="@dimen/textsize_big"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/imageCloseOrder"
            app:layout_constraintTop_toTopOf="@id/imageCloseOrder"
            android:paddingRight="@dimen/default_double_padding"
            android:paddingEnd="@dimen/default_double_padding"/>
        <TextView
            android:id="@+id/textViewSelectedBin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_big"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/textViewImAt"
            app:layout_constraintTop_toBottomOf="@id/textViewImAt"
            android:paddingRight="@dimen/default_double_padding"
            android:paddingEnd="@dimen/default_double_padding"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:scaleType="fitXY"
            android:tint="@color/colorPrimary"
            android:padding="@dimen/default_padding"
            android:layout_margin="@dimen/default_margin"
            android:id="@+id/imageCloseOrder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_mapmarker_check_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/quickhelp"
        android:id="@+id/quickHelpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="1000dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/default_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        >
        <TextView
            android:id="@+id/quickhelpText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/textsize_big"
            android:textColor="@color/colorQuickhelpText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/quickhelpIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/quickhelpIcon"
            android:layout_width="@dimen/quickelp_icon_size"
            android:layout_height="@dimen/quickelp_icon_size"
            android:tint="@color/colorQuickhelpText"
            app:srcCompat="@drawable/ic_support_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>