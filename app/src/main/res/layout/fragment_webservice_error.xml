<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/webserviceErrorContainer"
    android:padding="@dimen/default_double_padding"
    >
    <TextView
        android:id="@+id/textWebserviceErrorHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/textsize_huge"
        android:text="@string/webservice_error_header"
        />
    <TextView
        android:id="@+id/textWebserviceErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textWebserviceErrorHeader"
        android:textSize="@dimen/textsize_big"
        android:text="@string/webservice_error_text"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageNoEntry"
        android:layout_width="@dimen/icon_big_width"
        android:layout_height="@dimen/icon_big_height"
        app:srcCompat="@drawable/ic_no_entry"
        app:layout_constraintTop_toBottomOf="@id/textWebserviceErrorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/errorContainer"
        app:layout_constraintTop_toBottomOf="@id/imageNoEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_double_margin"
        android:layout_marginBottom="@dimen/default_margin"
        app:layout_constraintBottom_toTopOf="@id/buttonCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/textErrors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>