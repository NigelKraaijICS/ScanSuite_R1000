<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemPropertyValueInputItemLinearLayout"
    style="@style/userRecyclerLinearLayout"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/allContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/primaryContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                style="@style/imageviewUserButton"
                android:id="@+id/imageViewShippingUnit"
                app:srcCompat="@drawable/ic_chat_blue_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                style="@style/userNameText"
                android:id="@+id/textViewDescription"
                app:layout_constraintStart_toEndOf="@id/imageViewShippingUnit"
                app:layout_constraintEnd_toStartOf="@id/imageChevronDown"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                style="@style/userUserNameText"
                android:id="@+id/textViewValue"
                app:layout_constraintStart_toStartOf="@id/textViewDescription"
                app:layout_constraintEnd_toStartOf="@id/textViewQuantityUsed"
                app:layout_constraintTop_toBottomOf="@id/textViewDescription"
                />
            <TextView
                style="@style/userNameText"
                android:id="@+id/textViewQuantityUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/imageChevronDown"
                app:layout_constraintTop_toTopOf="@id/textViewValue"
                />
            <View
                android:id="@+id/menuSeparator"
                style="@style/menuSeparator"
                app:layout_constraintStart_toStartOf="@id/textViewValue"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageChevronDown"
                app:srcCompat="@drawable/ic_chevron_down_black_24dp"
                android:tint="@color/colorNeutral"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondaryContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/primaryContent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/default_double_margin">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineMiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="198dp" />
            <androidx.appcompat.widget.AppCompatImageButton
                style="@style/smallButton.Zerobutton"
                android:id="@+id/imageButtonZero"
                app:srcCompat="@drawable/ic_close_black_24dp"
                android:layout_marginEnd="@dimen/zerobutton_marginright"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <androidx.appcompat.widget.AppCompatImageButton
                style="@style/smallButton.Zerobutton"
                android:id="@+id/imageButtonManual"
                app:srcCompat="@drawable/ic_numeric_black_24dp"
                android:layout_marginEnd="@dimen/zerobutton_marginright"
                app:layout_constraintEnd_toStartOf="@id/imageButtonMinus"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <androidx.appcompat.widget.AppCompatImageButton
                style="@style/smallButton"
                android:id="@+id/imageButtonMinus"
                app:srcCompat="@drawable/ic_remove_black_24dp"
                app:layout_constraintEnd_toStartOf="@id/imageButtonPlus"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatImageButton
                style="@style/smallButton"
                android:id="@+id/imageButtonPlus"
                app:srcCompat="@drawable/ic_add_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>