<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Dialogs.NothingHereFragment"
    android:layout_margin="8dp">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/guidelinehalfway"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/guidelinetext"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="horizontal"/>
    <TextView
        android:id="@+id/textViewNothingHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_document"
        app:layout_constraintBottom_toTopOf="@id/guidelinetext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/textsize_big_20"
        />
    <View
        android:id="@+id/viewDesert"
        android:layout_height="36dp"
        android:layout_width="match_parent"
        android:background="@color/colorDesertGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewCactus"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_cactus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewTumbleweed"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_tumbleweed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewWind"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_wind"
        app:layout_constraintEnd_toStartOf="@id/imageViewTumbleweed"
        app:layout_constraintTop_toTopOf="@id/imageViewTumbleweed"
        />
</androidx.constraintlayout.widget.ConstraintLayout>