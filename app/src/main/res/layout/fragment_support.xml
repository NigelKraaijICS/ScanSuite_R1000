<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.support.SupportFragment">
    <android.support.design.widget.TabLayout
        android:id="@+id/supportTabLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/supportViewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/supportTabLayout"
        android:layout_marginTop="@dimen/default_double_margin"
        />
</android.support.constraint.ConstraintLayout>