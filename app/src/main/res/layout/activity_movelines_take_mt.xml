<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuActionsDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Move.MoveLinesActivity"
    android:id="@+id/container"
    style="@style/defaultScreen">
    <include layout="@layout/toolbar_subtext_default"/>
    <include layout="@layout/default_orderinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMoveLinesTake"
        style="@style/defaultRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chosenOrderContainer"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"  >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/quickhelp"
            android:id="@+id/quickHelpContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="1000dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/default_padding"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            >
            <TextView
                android:id="@+id/quickhelpText"
                android:layout_height="wrap_content"
                android:layout_width="125dp"
                android:textSize="@dimen/textsize_big_20"
                android:textColor="@color/colorQuickhelpText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/quickhelpIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/quickhelpIcon"
                android:layout_width="@dimen/quickelp_icon_size"
                android:layout_height="@dimen/quickelp_icon_size"
                android:tint="@color/colorQuickhelpText"
                app:srcCompat="@drawable/ic_support_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/pillButton"
            android:id="@+id/currentBINContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:scaleType="fitXY"
                android:tint="@color/colorLogoRed"

                android:id="@+id/imageClearBin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_clear_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/textViewBin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_normal_16"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/imageClearBin"
                app:layout_constraintBottom_toBottomOf="@id/imageClearBin"
                app:layout_constraintTop_toTopOf="@id/imageClearBin"
                android:paddingRight="@dimen/default_double_padding"
                android:paddingEnd="@dimen/default_double_padding"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/todoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="1000dp"
            android:padding="@dimen/default_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            >
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchTodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:text="@string/show_only_todo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/actionMenuNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        app:headerLayout="@layout/header_actions_menu"
        app:menu="@menu/menu_stockactions"
        android:hapticFeedbackEnabled="true"
        />
</androidx.drawerlayout.widget.DrawerLayout>
