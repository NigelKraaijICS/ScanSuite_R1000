<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentSortorderLinesSorted"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <androidx.appcompat.widget.SearchView
        android:id="@+id/recyclerSearchView"
        style="@style/recyclerSearchView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSortorderLinesSorted"
        style="@style/defaultRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerSearchView"
        app:layout_constraintBottom_toTopOf="@id/resetPicklineView"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/pillButton"
        android:id="@+id/resetPicklineView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/textViewResetLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:textSize="@dimen/textsize_big"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/imageLocationHere"
            app:layout_constraintTop_toTopOf="@id/imageLocationHere"
            android:paddingRight="@dimen/default_double_padding"
            android:paddingEnd="@dimen/default_double_padding"/>
        <TextView
            android:id="@+id/textViewSelectedLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_big"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/textViewResetLine"
            app:layout_constraintTop_toBottomOf="@id/textViewResetLine"
            android:paddingRight="@dimen/default_double_padding"
            android:paddingEnd="@dimen/default_double_padding"/>
        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            android:tint="@color/colorPrimary"
            android:padding="@dimen/default_padding"
            android:layout_margin="@dimen/default_margin"
            android:id="@+id/imageLocationHere"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_reset_black_24dp"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>