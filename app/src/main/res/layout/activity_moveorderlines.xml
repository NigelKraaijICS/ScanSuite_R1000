<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        tools:context=".Activities.move.MoveorderLinesActivity"
        style="@style/defaultScreen">
        <include layout="@layout/toolbar_default" />
        <include layout="@layout/default_orderinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            />
        <TextView
            android:id="@+id/quantityMoveordersText"
            style="@style/quantityPickordersText"
            app:layout_constraintTop_toBottomOf="@id/chosenOrderContainer"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/moveorderLinesTabLayout"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/chosenOrderContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/quantityMoveordersText"
        />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/moveorderLinesViewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/moveorderLinesTabLayout"
            app:layout_constraintBottom_toTopOf="@id/imageStart"
            />
    <androidx.appcompat.widget.AppCompatImageView
        style="@style/defaultBottomButton"
        android:id="@+id/imageStart"
        app:srcCompat="@drawable/ic_start_black_24dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
