<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.sort.SortorderSortActivity"
    android:background="@color/colorBart"
    >
    <include layout="@layout/toolbar_subtext_default" />
    <include layout="@layout/default_articleinfo" />
    <include layout="@layout/default_locationinfo" />
    <android.support.v7.widget.CardView
        android:id="@+id/sourcenoContainer"
        style="@style/articleInfoContainer"
        app:layout_constraintTop_toBottomOf="@id/quantityRequiredText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_double_padding"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            >
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/textsize_enormous"
                android:layout_height="@dimen/textsize_enormous"
                app:srcCompat="@drawable/ic_document_black_24dp"
                android:tint="@color/colorDivider"
                app:layout_constraintEnd_toStartOf="@id/sourcenoText"
                app:layout_constraintTop_toTopOf="@id/sourcenoText"
                app:layout_constraintBottom_toBottomOf="@id/sourcenoText"/>
            <TextView
                android:id="@+id/sourcenoText"
                style="@style/defaultinfoSmallerText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/containerText"
        style="@style/containerText"
        app:layout_constraintTop_toBottomOf="@id/locationContainer"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/quantityText"
        style="@style/quantityText"
        app:layout_constraintTop_toBottomOf="@id/containerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/quantityRequiredText"
        style="@style/quantityRequiredText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quantityText"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPackingTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sourcenoContainer"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/articleInfoContainer"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textViewPackingTable"
                app:srcCompat="@drawable/ic_pack_black_24dp"
                android:tint="@color/colorDivider"
                />
            <TextView
                android:id="@+id/textViewPackingTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/textsize_big"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.AppCompatImageButton
        style="@style/countButton"
        android:id="@+id/imageButtonMinus"
        app:srcCompat="@drawable/ic_remove_black_24dp"
        app:layout_constraintEnd_toStartOf="@id/numberLeftBarrier"
        app:layout_constraintTop_toTopOf="@id/quantityText"
        />

    <android.support.v7.widget.AppCompatImageButton
        style="@style/countButton"
        android:id="@+id/imageButtonPlus"
        app:srcCompat="@drawable/ic_add_black_24dp"
        app:layout_constraintStart_toEndOf="@id/numberRightBarrier"
        app:layout_constraintTop_toTopOf="@id/quantityText"
        />
    <android.support.v7.widget.AppCompatImageButton
        style="@style/defaultBottomButton"
        android:id="@+id/imageButtonDone"
        app:srcCompat="@drawable/ic_check_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        />
    <android.support.constraint.Barrier
        android:id="@+id/numberRightBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="quantityText,quantityRequiredText"/>
    <android.support.constraint.Barrier
        android:id="@+id/numberLeftBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="quantityText,quantityRequiredText"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewAdviceLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardViewPackingTable"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/cardViewAdviceLocation"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textAdviceLocation"
                app:srcCompat="@drawable/ic_target_black_24dp"
                android:tint="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/textAdviceLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/no_advice_locations"
                android:textSize="@dimen/textsize_huge"
                android:textColor="@color/colorPrimary"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/textViewAction"
        android:text="@string/scan_article"
        android:textSize="@dimen/textsize_big"
        android:layout_marginTop="@dimen/default_double_margin"
        android:layout_marginLeft="@dimen/default_double_margin"
        app:layout_goneMarginRight="@dimen/default_double_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewAdviceLocation"
        />

</android.support.constraint.ConstraintLayout>