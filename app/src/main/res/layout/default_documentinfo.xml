<androidx.cardview.widget.CardView android:id="@+id/documentContainer"
    style="@style/articleInfoContainer"
    app:layout_constraintTop_toBottomOf="@id/articleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageDocument"
            android:layout_width="@dimen/textsize_enormous_28"
            android:layout_height="@dimen/textsize_enormous_28"
            app:srcCompat="@drawable/ic_document_black_24dp"
            android:tint="@color/colorDivider"
            app:layout_constraintEnd_toStartOf="@id/documentText"
            app:layout_constraintTop_toTopOf="@id/documentText"
            app:layout_constraintBottom_toBottomOf="@id/documentText"/>
        <TextView
            android:id="@+id/documentText"
            style="@style/defaultinfoText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>