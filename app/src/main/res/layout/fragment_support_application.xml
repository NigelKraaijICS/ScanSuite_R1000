<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Support.SupportApplicationFragment"
    android:padding="@dimen/default_padding">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        style="@style/textFormLabel"
        android:id="@+id/textViewApplicationVersionLabel"
        android:text="@string/application_version"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        style="@style/textFormValue"
        android:id="@+id/textViewApplicationVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewApplicationVersionLabel"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/updateImageButton"
        style="@style/smallButton"
        app:srcCompat="@drawable/ic_update_black_24dp"
        app:layout_constraintTop_toTopOf="@id/textViewApplicationVersionLabel"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/textViewApplicationVersion"
        style="@style/textFormLabel"
        android:id="@+id/textViewApplicationInstalledLabel"
        android:text="@string/label_application_installed"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        style="@style/textFormValue"
        android:id="@+id/textViewApplicationInstalled"
        app:layout_constraintTop_toBottomOf="@id/textViewApplicationInstalledLabel"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/textViewApplicationVersion"
        style="@style/textFormLabel"
        android:id="@+id/textViewApplicationLastUpdateLabel"
        android:text="@string/label_application_last_update"
        android:layout_marginLeft="@dimen/default_double_margin"
        android:layout_marginStart="@dimen/default_double_margin"
        app:layout_constraintStart_toEndOf="@id/textViewApplicationInstalled"/>
    <TextView
        style="@style/textFormValue"
        android:id="@+id/textViewApplicationLastUpdate"
        app:layout_constraintTop_toBottomOf="@id/textViewApplicationLastUpdateLabel"
        app:layout_constraintStart_toStartOf="@id/textViewApplicationLastUpdateLabel"
        />
    <TextView
        style="@style/textFormLabel"
        android:id="@+id/textViewWebserviceLabel"
        android:text="@string/webservice"
        app:layout_constraintTop_toBottomOf="@id/textViewApplicationInstalled"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        style="@style/textFormValueConstrained"
        android:id="@+id/textViewWebservice"
        app:layout_constraintTop_toBottomOf="@id/textViewWebserviceLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/testWebserviceImageButton"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/testWebserviceImageButton"
        style="@style/smallButton"
        app:srcCompat="@drawable/ic_cloud_question_black_24dp"
        app:layout_constraintTop_toTopOf="@id/textViewWebserviceLabel"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/checkDarkModus"
        android:textSize="@dimen/textsize_normal_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="false"
        android:key="@string/check_receive_barcodes_switch"
        android:text="@string/use_darkmode"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewWebservice"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/checkProglove"
        android:textSize="@dimen/textsize_normal_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="false"
        android:text="@string/use_proglove"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkDarkModus"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconFreepik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_freepik"
        app:layout_constraintTop_toBottomOf="@id/checkProglove"
        android:layout_marginTop="@dimen/default_double_margin"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        style="@style/textFormLabel"
        android:text="@string/iconattribution_freepik"
        app:layout_constraintBottom_toBottomOf="@id/iconFreepik"
        app:layout_constraintTop_toTopOf="@id/iconFreepik"
        app:layout_constraintStart_toEndOf="@id/iconFreepik"
        android:layout_marginStart="@dimen/default_double_margin"
        android:layout_marginLeft="@dimen/default_double_margin"
        />
</androidx.constraintlayout.widget.ConstraintLayout>