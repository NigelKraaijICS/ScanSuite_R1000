    <android.support.v7.widget.AppCompatImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:tint="@color/colorWhite"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/imageLogo"
        android:layout_marginTop="@dimen/default_margin"
        app:srcCompat="@drawable/ic_scansuite_logo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textMenu"
        app:layout_constraintBottom_toBottomOf="@id/textMenu"
        />
    <TextView
        style="@style/header_navigationview_title"
        android:text="@string/mainmenu_title"
        android:id="@+id/textMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageLogo"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>