<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.main.DateTimeFragment"
    >
        <TextView
            android:id="@+id/textViewCurrentDate"
            style="@style/languageText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textViewCurrentTime"
            />
        <TextView
            android:id="@+id/textViewCurrentTime"
            style="@style/languageTextLarge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textViewTimeZone"
            />
        <TextView
            android:id="@+id/textViewTimeZone"
            style="@style/languageText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonChangeDateTime"
            />
        <ImageButton
            android:id="@+id/buttonChangeDateTime"
            style="@style/defaultBottomRealButton"
            app:srcCompat="@drawable/ic_calendar_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/changedatetime_description"/>
</android.support.constraint.ConstraintLayout>
