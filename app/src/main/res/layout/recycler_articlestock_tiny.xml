<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemStockItemLinearLayout"
    style="@style/userRecyclerLinearLayout"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            style="@style/imageviewUserTinyButton"
            android:id="@+id/imageViewBinItemPositive"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            style="@style/imageviewUserTinyButton"
            android:id="@+id/imageViewBinItemNegative"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imageViewBinItemPositive"
            app:layout_constraintBottom_toBottomOf="@id/imageViewBinItemPositive"
            app:layout_constraintStart_toStartOf="@id/imageViewBinItemPositive"
            app:layout_constraintEnd_toEndOf="@id/imageViewBinItemPositive"
            android:textSize="@dimen/textsize_small_12"
            android:textColor="@color/colorCommentText"
            android:id="@+id/textViewQuantity"
            android:elevation="@dimen/default_double_elevation"
            />
        <TextView
            style="@style/userNameSmallText"
            android:id="@+id/textviewBinCode"
            app:layout_constraintStart_toEndOf="@id/imageViewBinItemPositive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
            android:id="@+id/menuSeparator"
            style="@style/menuSeparator"
            app:layout_constraintStart_toEndOf="@id/imageViewBinItemPositive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>