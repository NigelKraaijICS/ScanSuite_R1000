<androidx.cardview.widget.CardView
    android:id="@+id/shippingInfoContainer"
    style="@style/shippingInfoContainer"
    app:layout_constraintTop_toBottomOf="@id/articleContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        >
        <TextView
            android:id="@+id/shippingAgentText"
            style="@style/shippingInfoText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/shippingServiceText"
            style="@style/shippingInfoText"
            app:layout_constraintTop_toBottomOf="@id/shippingAgentText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>