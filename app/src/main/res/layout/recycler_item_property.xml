<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemPropertyLinearLayout"
    style="@style/pickorderRecyclerLinearLayout"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagePropertyType"
            style="@style/recyclerItemImage"
            app:srcCompat="@drawable/ic_document_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textViewPropertyCode"
            style="@style/pickorderRecyclerOrdernumberText"
            app:layout_constraintStart_toEndOf="@id/imagePropertyType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <EditText
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:id="@+id/editTextPropertyValue"
            style="@style/orderDoneCurrentLocation"
            android:hint="@string/hint_add_property"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPropertyCode"
            android:importantForAutofill="no" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>