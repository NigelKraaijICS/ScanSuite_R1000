<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inventoryorderLineItemLinearLayout"
    style="@style/recyclerorderRecyclerLinearLayout"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            style="@style/imageviewMenuButton"
            android:id="@+id/imageViewInventoryorder"
            app:srcCompat="@drawable/ic_menu_demo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            />
        <View
            style="@style/orderStatusIndicator"
            android:id="@+id/viewOrderStatus"
            app:layout_constraintStart_toEndOf="@id/imageViewInventoryorder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageArticle"
            style="@style/recyclerItemImage"
            app:srcCompat="@drawable/ic_document_black_24dp"
            app:layout_constraintStart_toEndOf="@id/viewOrderStatus"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textViewArticle"
            style="@style/pickorderRecyclerOrdernumberText"
            app:layout_constraintStart_toEndOf="@id/imageArticle"
            app:layout_constraintEnd_toStartOf="@id/imageChevronDown"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewVendorItemNo"
            style="@style/recyclerItemImage"
            app:srcCompat="@drawable/ic_variant_black_24dp"
            app:layout_constraintTop_toTopOf="@id/textViewVendorItemNo"
            app:layout_constraintBottom_toBottomOf="@id/textViewVendorItemNo"
            app:layout_constraintStart_toEndOf="@id/viewOrderStatus"
            />
        <TextView
            android:id="@+id/textViewVendorItemNo"
            style="@style/pickorderRecyclerOrdernumberText"
            app:layout_constraintTop_toBottomOf="@id/textViewArticle"
            app:layout_constraintStart_toEndOf="@id/imageViewVendorItemNo"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewCounted"
            style="@style/recyclerItemImage"
            app:srcCompat="@drawable/ic_counter_black_24dp"
            app:layout_constraintTop_toTopOf="@id/textViewCounted"
            app:layout_constraintBottom_toBottomOf="@id/textViewCounted"
            app:layout_constraintEnd_toStartOf="@id/imageChevronDown"
            />
        <TextView
            android:id="@+id/textViewCounted"
            style="@style/pickorderRecyclerQuantityTotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/textViewVendorItemNo"
            app:layout_constraintEnd_toStartOf="@id/imageViewCounted"
            />
        <View
            android:id="@+id/menuSeparator"
            style="@style/menuSeparator"
            app:layout_constraintStart_toStartOf="@id/textViewArticle"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageChevronDown"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            android:tint="@color/colorNeutral"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>