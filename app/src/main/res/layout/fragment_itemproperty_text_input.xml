<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Dialogs.ItemPropertyTextInputFragment"
    style="@style/passworddialog_container">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageHeader"
        style="@style/imageviewToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textHeader"
        app:layout_constraintTop_toTopOf="@id/textHeader"
        app:srcCompat="@drawable/ic_text_black_24dp"
        android:tint="@color/colorPrimary"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageHeader"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textHeader"
        style="@style/passworddialog_header"
        />
    <EditText
        app:layout_constraintTop_toBottomOf="@id/textHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/inputText"
        android:importantForAutofill="no"
        style="@style/textdialog"
        />
    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:text="@string/cancel"
        app:layout_constraintTop_toBottomOf="@id/inputText"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:text="@string/ok"
        app:layout_constraintTop_toTopOf="@id/buttonCancel"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
