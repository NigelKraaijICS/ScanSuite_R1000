<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/returnorderLineItemLinearLayout"
    style="@style/recyclerorderRecyclerLinearLayout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_background"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/reset_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            app:srcCompat="@drawable/ic_restore_white_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_toLeftOf="@id/reset_icon"
            android:text="@string/reset"
            android:textColor="@color/colorWhite"
            android:textSize="13dp" />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:background="@drawable/menu_row"
        android:id="@+id/view_foreground">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageArticle"
            style="@style/recyclerItemImage"
            app:srcCompat="@drawable/ic_document_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textViewArticle"
            style="@style/returnorderRecyclerOrdernumberText"
            app:layout_constraintStart_toEndOf="@id/imageArticle"
            app:layout_constraintTop_toTopOf="@id/imageArticle"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewDescription"
            style="@style/recyclerItemImage"
            app:srcCompat="@drawable/ic_variant_black_24dp"
            app:layout_constraintTop_toTopOf="@id/textViewDescription"
            app:layout_constraintBottom_toBottomOf="@id/textViewDescription"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/textViewDescription"
            style="@style/returnorderRecyclerDescriptionText"
            app:layout_constraintTop_toBottomOf="@id/textViewArticle"
            app:layout_constraintStart_toEndOf="@id/imageViewDescription"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewCounted"
            style="@style/recyclerItemImage"
            app:srcCompat="@drawable/ic_counter_black_24dp"
            app:layout_constraintTop_toTopOf="@id/textViewCounted"
            app:layout_constraintBottom_toBottomOf="@id/textViewCounted"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/textViewCounted"
            style="@style/pickorderRecyclerQuantityTotalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageViewCounted"
            app:layout_constraintTop_toBottomOf="@id/textViewDescription" />

        <TextView
            android:id="@+id/textViewReason"
            style="@style/pickorderRecyclerQuantityTotalText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/textViewCounted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDescription"
            android:layout_marginLeft="@dimen/default_margin"
            app:srcCompat="@drawable/ic_dislike"/>
        <View
            android:id="@+id/menuSeparator"
            style="@style/menuSeparator"
            app:layout_constraintStart_toStartOf="@id/textViewArticle"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>