<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/binItemItemLinearLayout"
    style="@style/userRecyclerLinearLayout"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            style="@style/imageviewUserButton"
            android:id="@+id/imageViewBinItem"
            android:backgroundTint="@color/colorCommentBubble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imageViewBinItem"
            app:layout_constraintBottom_toBottomOf="@id/imageViewBinItem"
            app:layout_constraintStart_toStartOf="@id/imageViewBinItem"
            app:layout_constraintEnd_toEndOf="@id/imageViewBinItem"
            android:textSize="@dimen/textsize_huge"
            android:textColor="@color/colorCommentText"
            android:id="@+id/textViewQuanitity"
            android:elevation="@dimen/default_double_elevation"
            />
        <TextView
            style="@style/userNameText"
            android:id="@+id/textViewItemNo"
            app:layout_constraintStart_toEndOf="@id/imageViewBinItem"
            app:layout_constraintEnd_toStartOf="@id/imageChevronDown"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            style="@style/userUserNameText"
            android:id="@+id/textViewVariantCode"
            app:layout_constraintStart_toStartOf="@id/textViewItemNo"
            app:layout_constraintEnd_toEndOf="@id/textViewItemNo"
            app:layout_constraintTop_toBottomOf="@id/textViewItemNo"
            />
        <View
            android:id="@+id/menuSeparator"
            style="@style/menuSeparator"
            app:layout_constraintStart_toStartOf="@id/textViewItemNo"
            app:layout_constraintEnd_toEndOf="@id/textViewItemNo"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageChevronDown"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            android:tint="@color/colorNeutral"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>